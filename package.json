{
  "name": "magner-turborepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:docs": "turbo run build --scope=magner-docs",
    "build:packages": "turbo run packages"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "semantic-release": "^18.0.1",
    "semantic-release-monorepo": "^7.0.5",
    "turbo": "^1.0.24"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "packages": {
        "dependsOn": [
          "magner#build",
          "create-magner#build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  }
}