{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "@types/jest"],
    "baseUrl": ".",
    "paths": {
      "lib/*": ["lib/*"],
      "styles/*": ["playground/assets/styles/*"]
    }
  },
  "include": [
    "playground/**/*.ts",
    "playground/**/*.d.ts",
    "playground/**/*.vue",
    "lib/**/*.ts",
    "lib/**/*.d.ts",
    "lib/**/*.vue"
  ],
  "ts-node": {
    "transpileOnly": true,
    "moduleTypes": {
      "./playground/**/**": "cjs",
      "./lib/**/**": "cjs"
    },
    "include": [
      "playground/**/*.ts",
      "playground/**/*.d.ts",
      "playground/**/*.vue",
      "lib/**/*.ts",
      "lib/**/*.d.ts",
      "lib/**/*.vue"
    ]
  }
}
