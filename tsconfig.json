{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "@types/jest", "cypress"],
    "baseUrl": ".",
    "paths": {
      "app/*": ["src/app/*"],
      "core/*": ["src/core/*"],
      "configs/*": ["src/configs/*"],
      "assets/*": ["src/assets/*"],
      "styles/*": ["src/core/assets/styles/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "tests/**/*.ts"],
  "ts-node": {
    "transpileOnly": true,
    "moduleTypes": {
      "./src/**/**": "cjs"
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
  }
}
